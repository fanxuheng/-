<view class="page-backgroud"><block a:for="{{$root.l0}}" a:for-item="item" a:for-index="index" a:key="appointmentId"><view class="appoint-record-box"><view class="top-title"><text class="left">{{item.f0}}</text><text class="right">{{item.$orig.specialName+"/"+item.$orig.outpatientName}}</text></view><view class="appoint-info"><text class="left balck-text">医生：</text><text class="right">{{item.$orig.doctorName}}</text></view><view class="appoint-info"><text class="left balck-text">时间：</text><text class="right">{{item.f1}}</text></view><view class="appoint-info"><text class="left balck-text">医院：</text><text class="right">{{item.$orig.hospitalName}}</text></view><view class="appoint-info"><text class="left balck-text">诊室：</text><text class="right">{{item.$orig.clinicName}}</text></view><view class="appoint-info"><text class="left balck-text">患者：</text><text class="right">{{item.$orig.name+'(排队号：'}}<text style="color:#7EC0EE;">{{item.$orig.queueNum}}</text>)</text></view><view class="appoint-info"><text class="left balck-text">费用：</text><text class="right">10元</text></view><view class="appoint-info"><text class="left balck-text">状态：</text><block a:if="{{item.$orig.status===3}}"><text class="right">{{''+item.f2}}</text></block><block a:if="{{item.$orig.status===0}}"><view class="right"><text class="green-text">{{''+item.f3}}</text><block a:if="{{(item.$orig.day-$root.g0)*1.0/(1000*60*60)>24&&$root.g1<item.$orig.day}}"><button data-event-opts="{{[['tap',[['cancelAppoint',['$0'],[[['appointRecordList','appointmentId',item.$orig.appointmentId,'appointmentId']]]]]]]}}" class="cancel-button red-text" onTap="__e">取消预约</button></block></view></block><block a:if="{{item.$orig.status===1||item.$orig.status===2}}"><text class="right red-text">{{''+item.f4}}</text></block></view></view></block><view class="loading">{{loadingText}}</view></view>