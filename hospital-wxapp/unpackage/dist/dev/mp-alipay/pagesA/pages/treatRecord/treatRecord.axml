<view class="page-backgroud"><scroll-view class="bg-white nav" scroll-x scroll-with-animation scroll-left="{{scrollLeft}}"><block a:for="{{cardList}}" a:for-item="item" a:for-index="index" a:key="id"><view class="{{(('cu-item')+' '+(item.id==TabCur?'text-green cur':''))}}" data-id="{{item.id}}" data-event-opts="{{[['tap',[['tabSelect',['$event']]]]]}}" onTap="__e">{{''+item.name+''}}</view></block></scroll-view><block a:for="{{$root.l0}}" a:for-item="item" a:for-index="index" a:key="appointmentId"><view data-event-opts="{{[['tap',[['toDetail',['$0'],[[['treatRecordList','appointmentId',item.$orig.appointmentId,'appointmentId']]]]]]]}}" class="treat-record-box" onTap="__e"><view class="info-box"><text class="left black-text">时间：</text><text class="right gray-text">{{item.f0+"/"+item.f1}}</text></view><view class="info-box"><text class="left black-text">医生：</text><text class="right gray-text">{{item.$orig.doctorName}}</text></view><view class="info-box"><text class="left black-text">科室：</text><text class="right gray-text">{{item.$orig.specialName+"/"+item.$orig.outpatientName}}</text></view><view class="more">查看详情...</view></view></block><view class="loading">{{loadingText}}</view></view>